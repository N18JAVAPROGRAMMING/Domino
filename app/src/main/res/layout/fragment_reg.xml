<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegFragment"
    android:layout_margin="10dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:textSize="40sp"
        android:layout_margin="20sp"
        android:gravity="center"
        android:id="@+id/input_text"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_text"
        android:layout_margin="10dp"
        android:id="@+id/reg_login"
        android:hint="login"/>

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/reg_login"
    android:layout_margin="10dp"
    android:id="@+id/reg_password"
    android:hint="password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_password"
        android:layout_margin="10dp"
        android:id="@+id/reg_confirm_password"
        android:hint="confirmation password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_confirm_password"
        android:layout_centerHorizontal="true"
        android:text="start"
        android:id="@+id/r_next"/>

</RelativeLayout>