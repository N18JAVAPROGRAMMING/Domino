<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PageWithTwoDominos"
    android:background="@color/lightBlack">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay1"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="@drawable/domino_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintEnd_toStartOf="@+id/center"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.120000005">


            <TextView
                style="@style/Empty"
                android:textColor="#FFFFFF"
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="1"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/text12"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                style="@style/Empty"
                android:textColor="#FFFFFF"
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="1"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text11" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay2"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:background="@drawable/domino_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/lay1"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintLeft_toRightOf="@+id/lay1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/center">

            <TextView
                style="@style/Empty"
                android:textColor="#FFFFFF"
                android:id="@+id/text21"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="1"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/text22"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                style="@style/Empty"
                android:textColor="#FFFFFF"
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="1"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text21" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>



</FrameLayout>