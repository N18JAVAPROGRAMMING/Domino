<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PageWithTwoDominos">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/lay2"
            android:orientation="vertical"
            android:background="@drawable/cornerrect"
            android:layout_margin="8dp">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/text11"
                app:layout_constraintBottom_toTopOf="@+id/text12"
                app:layout_constraintTop_toTopOf="parent"
                android:text="1"
                android:textSize="32sp"
                android:gravity="center"/>


            <TextView
                app:layout_constraintTop_toBottomOf="@+id/text11"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:id="@+id/text12"
                android:layout_height="0dp"
                android:text="1"
                android:textSize="32sp"
                android:gravity="center"/>



        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@+id/lay1"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:background="@drawable/cornerrect"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/text21"
                app:layout_constraintBottom_toTopOf="@+id/text22"
                app:layout_constraintTop_toTopOf="parent"
                android:text="1"
                android:textSize="32sp"
                android:gravity="center"/>


            <TextView
                app:layout_constraintTop_toBottomOf="@+id/text21"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:id="@+id/text22"
                android:layout_height="0dp"
                android:text="1"
                android:textSize="32sp"
                android:gravity="center"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>



</FrameLayout>