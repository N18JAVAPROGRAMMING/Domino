<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightBlack</item>
        <item name="colorPrimaryDark">@color/darkBlack</item>
        <item name="colorAccent">@color/pink</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Background.BottomNavigation">
        <item name="cardElevation">50dp</item>
        <item name="android:background">@color/lighter_light_black</item>
    </style>

    <style name="AppTheme.PinkButton">
        <item name="cardBackgroundColor">@color/pink_button</item>
    </style>

    <style name="AppTheme.GreyButton">
        <item name="cardElevation">20dp</item>
        <item name="cardBackgroundColor">@color/gray_button</item>
    </style>

    <style name="AppTheme.Background">
        <item name="cardBackgroundColor">@color/lightBlack</item>
    </style>

    <style name="AppTheme.RoomItem">
        <item name="cardBackgroundColor">@color/room_clickable</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="AppTheme.NotCardBackground">
        <item name="android:background">@color/lightBlack</item>
    </style>
    
    <style name="AppTheme.Background.UpperInfo">
        <item name="cardElevation">30dp</item>
        <item name="android:background">@color/lighter_light_black</item>
        <item name="android:textSize">40sp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="cardBackgroundColor">@color/darkBlack</item>
        <item name="android:textColorHint">@color/lighter_light_black</item>
        <item name="editTextColor">#FFFFFF</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splah_background</item>
    </style>

</resources>
