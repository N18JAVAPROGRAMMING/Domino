<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightBlack</item>
        <item name="colorPrimaryDark">@color/darkBlack</item>
        <item name="colorAccent">@color/pink</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.DominoStyle">
        <item name="android:background">@color/lightBlack</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.DominoStyle.Button">
        <item name="android:background">@color/pink</item>
    </style>

    <style name="Empty" />

</resources>
